
{
    "env": {
        "browser": true,
        "es2021": true,
        "es6": true
    },
    "extends": "standart",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    }, 
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "import"
    ],
    "rules": {
        "no-unused-vars": "off",
        "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": [1, {
        "extensions": [".js", ".jsx"]}
    ]},
    "react/jsx-no-undef": ["true", { "allowGlobals": true }],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    }
};
